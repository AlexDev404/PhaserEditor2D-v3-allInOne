{
  "name": "PhaserEditor2D-allInOne",
  "version": "3.31.0-beta",
  "description": "Phaser Editor 2D, an IDE for HTML5 game creation",
  "main": "src/js/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "ts-watch": "tsc -p src/ts -w",
    "ts-build": "rm -Rf src/js; tsc -p src/ts;",
    "start": "electron-forge start --inspect-electron",
    "build-macos": "electron-forge package -p darwin",
    "build-linux": "electron-forge package -p linux",
    "build-win32": "electron-forge package -p win32",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "Arian Fornaris <developers@phasereditor2d.com> (https://phasereditor2d.com)",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/get-port": "^4.2.0",
    "@types/node": "^14.17.1",
    "electron": "13.0.1",
    "node-abi": "^2.19.3",
    "typescript": "^4.4.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "build-assets/icon",
        "overwrite": false
      },
      "makers": []
    }
  },
  "dependencies": {
    "recursive-copy": "^2.0.13"
  }
}
